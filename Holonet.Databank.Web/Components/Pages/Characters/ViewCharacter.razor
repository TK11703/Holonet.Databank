@page "/characters/item/{ID:int}"
@rendermode InteractiveServer
<PageTitle>Character View</PageTitle>

<h1><i class="bi bi-database"></i> @(@Model.FirstName) @(@Model.LastName)</h1>
<hr />

<div class="container">
	<div class="row mb-3">
		<p>
			<a href="@Model.Shard" target="_blank" class="text-decoration-none">
				<i class="bi bi-link"></i>
				@Model.Shard
			</a>
		</p>
		<div class="col-6">
			<i class="bi bi-file-earmark-person"></i> Edited By: @Model.UpdatedBy?.DisplayName
		</div>
		<div class="col-6">
			<i class="bi bi-calendar"></i> Updated On: @Model.UpdatedOn.ToString()
		</div>
	</div>
	<div class="row mb-3">
		<table class="table">
			<thead>
				<tr>
					<th scope="col">Species</th>
					<th scope="col">Homeworld</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>
						@foreach (var species in Model.Species)
						{
							<span class="badge bg-light text-dark">@species.Name</span>
						}
					</td>
					<td>
						@if (Model.Planet != null)
						{
							<span class="badge bg-light text-dark">@Model.Planet.Name</span>
						}
						else
						{
							<span class="badge bg-light text-dark">Unknown</span>
						}
					</td>
				</tr>
			</tbody>
		</table>
	</div>

	<div class="row mb-3">
		<div class="col-md-12">
			<p>
				@GetFormattedDescription()
			</p>
		</div>
	</div>
	<div class="row mb-3">
		<div class="col-md-12">
			<a href="characters/update/@(ID)" class="btn btn-light">Update</a>
			<a href="characters/index" class="btn btn-light">Cancel</a>
		</div>
	</div>
</div>