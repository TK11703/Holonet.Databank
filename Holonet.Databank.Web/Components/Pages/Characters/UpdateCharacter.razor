@page "/characters/update/{ID:int}"
@rendermode InteractiveServer
@attribute [Authorize]
<PageTitle>Update Character</PageTitle>

<h1><i class="bi bi-database-add"></i> Update Character</h1>
<hr />
@if (EditContext != null)
{
	<EditForm FormName="UpdateCharacter" OnValidSubmit="Submit" EditContext="EditContext">
		<DataAnnotationsValidator />
		<ValidationSummary />
		<div class="container">
			<nav class="navbar navbar-light bg-light">
				<div class="container-fluid justify-content-start">
					<button type="submit" class="btn btn-outline-primary btn-sm">Update</button>
					<a href="characters/index" class="btn btn-outline-secondary btn-sm">Cancel</a>
				</div>
			</nav>
			<div class="row mb-3">
				<div class="col-md-6">
					<label for="GivenName" class="form-label">Given Name</label>
					<InputText id="GivenName" class="form-control" @bind-Value="Model.GivenName" />
					<ValidationMessage For="() => Model.GivenName" />
				</div>
				<div class="col-md-6">
					<label for="FamilyName" class="form-label">Family Name</label>
					<InputText id="FamilyName" class="form-control" @bind-Value="Model.FamilyName" />
					<ValidationMessage For="() => Model.FamilyName" />
				</div>
			</div>
			<div class="row mb-3">
				<div class="col-md-6">
					<label for="BirthYear" class="form-label">Date of Birth</label>
					<div class="input-group mb-3">
						<InputNumber id="BirthYear" class="form-control" @bind-Value="Model.BirthYear" />
						<InputSelect id="DatingSystem" class="form-select" aria-label="Select a date period." @bind-Value="Model.DateSystem">
							<option value="BBY">BBY</option>
							<option value="ABY">ABY</option>
						</InputSelect>
					</div>
					<ValidationMessage For="() => Model.BirthDate" />
				</div>
				<div class="col-md-6">
					<label for="Planet" class="form-label">Birth Planet</label>
					<div class="input-group">
						<InputSelect id="Planet" class="form-select" @bind-Value="Model.PlanetId">
							<option value="">Select a planet</option>
							@foreach (var planet in Planets)
							{
								<option value="@planet.Id">@planet.Name</option>
							}
						</InputSelect>
						<button class="btn btn-primary" @onclick="RefreshPlanets"><i class="bi bi-arrow-clockwise"></i></button>
					</div>
					<ValidationMessage For="() => Model.PlanetId" />
				</div>
			</div>
			<div class="row mb-3">
				<div class="col-md-12">
					<label for="Shard" class="form-label">Shard (External Data Link)</label>
					<InputText id="Shard" class="form-control" @bind-Value="Model.Shard" />
					<ValidationMessage For="() => Model.Shard" />
				</div>
			</div>
			<div class="row mb-3">
				<div class="col-md-12">
					<label for="Species" class="form-label">Species</label>
					<div class="card">
						<div class="card-body">
							<CheckboxSelector SelectedOptionIds="Model.SpeciesIds" Options="@Species"></CheckboxSelector>
						</div>
						<div class="card-footer">
							<button class="btn btn-primary" type="button" @onclick="RefreshSpecies"><i class="bi bi-arrow-clockwise"></i> Refresh</button>
						</div>
					</div>
					<ValidationMessage For="() => Model.SpeciesIds" />
				</div>
			</div>
			<div class="row mb-3">
				<div class="col-md-12">
					<label for="Description" class="form-label">Description</label>
					<InputTextArea id="Description" class="form-control" @bind-Value="Model.Description" />
				</div>
			</div>
			<div class="row mb-3">
				<div class="col-md-12">
					<AliasSelector Aliases="@Model.Aliases" />
				</div>
			</div>
		</div>
	</EditForm>
}
else
{
	<div class="spinner"></div>
	<p>Loading...</p>
}