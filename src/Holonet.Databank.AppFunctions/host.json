{
    "version": "2.0",
    "functionTimeout": "00:05:00",
    "logging": {
        "applicationInsights": {
            "samplingSettings": {
                "isEnabled": true,
                "excludedTypes": "Request" // Exclude Request telemetry from sampling
            },
            "enableLiveMetricsFilters": true
        },
        "logLevel": {
            "Function": "Information", // Your function logs
            "Host": "Warning", // Runtime internals
            "Microsoft": "Warning", // SDKs and bindings
            "Worker": "Warning", // Isolated worker internals
            "Default": "Warning" // Catch-all fallback           
        }
    },
    "extensions": {
        "queues": {
            "messageEncoding": "none"
        }
    },
    "extensionBundle": {
        "id": "Microsoft.Azure.Functions.ExtensionBundle",
        "version": "[4.*, 5.0.0)"
    }
}