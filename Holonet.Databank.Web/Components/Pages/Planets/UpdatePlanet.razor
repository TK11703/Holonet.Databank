@page "/planets/update/{ID:int}"
@rendermode InteractiveServer
@attribute [Authorize]
<PageTitle>Update Planet</PageTitle>

<h1><i class="bi bi-database-add"></i> Update Planet</h1>
<hr />
@if (EditContext != null)
{
	<EditForm FormName="UpdatePlanet" EditContext="EditContext" OnValidSubmit="Submit">
		<DataAnnotationsValidator />
		<ValidationSummary />
		<div class="container">
			<div class="card mb-3">
				<div class="card-header">Enter the basic planet details</div>
				<div class="card-body">
					<div class="row mb-3">
						<div class="col-md-12">
							<label for="Name" class="form-label">Name</label>
							<InputText id="Name" class="form-control" @bind-Value="Model.Name" />
							<ValidationMessage For="() => Model.Name" />
						</div>
					</div>
					<div class="row mb-3">
						<div class="col-md-12">
							<label for="Shard" class="form-label">Shard (External Data Link)</label>
							<InputText id="Shard" class="form-control" @bind-Value="Model.Shard" />
							<ValidationMessage For="() => Model.Shard" />
						</div>
					</div>
				</div>
			</div>
			<div class="card mb-3">
				<div class="card-header">Enter additional name aliases</div>
				<div class="card-body">
					<AliasSelector Aliases="@Model.Aliases" />
				</div>
			</div>
			<nav class="navbar navbar-light bg-dark mb-3">
				<div class="container-fluid justify-content-start">
					<button type="submit" class="btn btn-primary btn-sm me-3" title="Click to update this item with the new information.">Update</button>
					<button type="button" @onclick="Cancel" class="btn btn-secondary btn-sm" title="Click to cancel this action and return to the last page or the index.">Cancel</button>
				</div>
			</nav>
		</div>
	</EditForm>
}
else
{
	<div class="spinner"></div>
	<p>Loading...</p>
}