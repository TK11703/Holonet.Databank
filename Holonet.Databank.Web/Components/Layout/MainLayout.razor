@inherits LayoutComponentBase
@using Blazored.Toast.Configuration
<header class="navbar sticky-top bg-dark flex-md-nowrap p-1 shadow" data-bs-theme="dark">
	<a class="navbar-brand col-md-3 col-lg-2 me-0 px-3 text-white" href="/">Databank #8808</a>
</header>
<div class="d-flex">
	<!-- Fixed left sidebar -->
	<div class="sidebar position-fixed pt-5">
		<NavMenu />
	</div>
	<!-- Scrollable main content -->
	<div class="flex-grow-1 overflow-auto p-3" style="margin-left: 250px;">
		<article class="content px-4">
			@Body
		</article>
	</div>
</div>

<BlazoredToasts Position="ToastPosition.BottomRight"
				Timeout="10"
				RemoveToastsOnNavigation="true"				
				/>

<div id="blazor-error-ui">
