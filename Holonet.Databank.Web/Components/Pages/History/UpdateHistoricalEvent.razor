@page "/historicalevents/update/{ID:int}"
@rendermode InteractiveServer
@attribute [Authorize]
<PageTitle>Update Historical Event</PageTitle>

<h1><i class="bi bi-database-add"></i> Update Historical Event</h1>
<hr />
@if (EditContext != null)
{
	<EditForm FormName="CreateCharacter" OnValidSubmit="Submit" EditContext="EditContext">
		<DataAnnotationsValidator />
		<ValidationSummary />
		<div class="container">
			<div class="row mb-3">
				<div class="col-md-6">
					<label for="Name" class="form-label">Name</label>
					<InputText id="Name" class="form-control" @bind-Value="Model.Name" />
					<ValidationMessage For="() => Model.Name" />
				</div>
				<div class="col-md-6">
					<label for="DatePeriod" class="form-label">Date Period</label>
					<div class="input-group mb-3">
						<InputNumber id="YearStarted" class="form-control" @bind-Value="Model.YearStarted" />
						<InputSelect id="YearStartedDatingSystem" class="form-select" aria-label="Select a period." @bind-Value="Model.YearStartedDateSystem">
							<option value="BBY">BBY</option>
							<option value="ABY">ABY</option>
						</InputSelect>
						<InputNumber id="YearEnded" class="form-control" @bind-Value="Model.YearEnded" />
						<InputSelect id="YearEndedDatingSystem" class="form-select" aria-label="Select a period." @bind-Value="Model.YearEndedDateSystem">
							<option value="BBY">BBY</option>
							<option value="ABY">ABY</option>
						</InputSelect>
					</div>
					<ValidationMessage For="() => Model.DatePeriod" />
				</div>
			</div>
			<div class="row mb-3">
				<div class="col-md-12">
					<label for="Shard" class="form-label">Shard (External Data Link)</label>
					<InputText id="Shard" class="form-control" @bind-Value="Model.Shard" />
					<ValidationMessage For="() => Model.Shard" />
				</div>
			</div>
			<div class="row mb-3">
				<div class="col-md-6">
					<label for="Character" class="form-label">Characters</label>
					<div class="card">
						<div class="card-body">
							<CheckboxSelector SelectedOptionIds="Model.CharacterIds" Options="@Characters"></CheckboxSelector>
						</div>
						<div class="card-footer">
							<button class="btn btn-primary" type="button" @onclick="RefreshCharacters"><i class="bi bi-arrow-clockwise"></i> Refresh</button>
						</div>
					</div>
				</div>
				<div class="col-md-6">
					<label for="Planet" class="form-label">Planets</label>
					<div class="card">
						<div class="card-body">
							<CheckboxSelector SelectedOptionIds="Model.PlanetIds" Options="@Planets"></CheckboxSelector>
						</div>
						<div class="card-footer">
							<button class="btn btn-primary" type="button" @onclick="RefreshPlanets"><i class="bi bi-arrow-clockwise"></i> Refresh</button>
						</div>
					</div>
				</div>
			</div>
			<div class="row mb-3">
				<div class="col-md-12">
					<label for="Description" class="form-label">Description</label>
					<InputTextArea id="Description" class="form-control" @bind-Value="Model.Description" />
				</div>
			</div>
			<div class="row mb-3">
				<div class="col-md-12">
					<AliasSelector Aliases="@Model.Aliases" />
				</div>
			</div>
			<div class="row mb-3">
				<div class="col-md-12">
					<button type="submit" class="btn btn-primary">Update</button>
					<a href="historicalevents/index" class="btn btn-light">Cancel</a>
				</div>
			</div>
		</div>
	</EditForm>
}
else
{
	<div class="spinner"></div>
	<p>Loading...</p>
}